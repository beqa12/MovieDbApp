<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.popular.PopularMoviesActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/filter_edit_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:hint="@string/search"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:paddingStart="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/filter_back_btn"
        app:layout_constraintTop_toTopOf="@+id/filter_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:padding="10dp"
        android:rotation="-180"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/filter_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/popular_movies_recycler"
        app:layout_constraintTop_toBottomOf="@+id/filter_edit_text"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_height="0dp"/>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
  </androidx.constraintlayout.widget.ConstraintLayout>